<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Pickle.TransferLite.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="clr-namespace:Pickle.TransferLite.Views"
        xmlns:tmpl="clr-namespace:Pickle.TransferLite.TemplatedControls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Pickle.TransferLite.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Transfer Lite"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>
    
    <Window.Styles>
        <StyleInclude Source="/TemplatedControls/TopButton.axaml"/>
        <StyleInclude Source="/TemplatedControls/PickleProgress.axaml"/>
    </Window.Styles>

    <Grid ColumnDefinitions="*,*"
          RowDefinitions="Auto,*,Auto"
          Margin="5"
          ShowGridLines="False">
        
        <!-- Top Menu -->
        <Grid Grid.Column="0" 
              Grid.Row="0"
              Grid.ColumnSpan="2"
              ColumnDefinitions="50,50,50,50,50,50,50">
            <tmpl:TopButton Grid.Column="0"
                            Icon="{StaticResource Back}"
                            Command="{Binding BackCommand}"
                            HotKey="Back"/>
            <tmpl:TopButton Grid.Column="1"
                            Icon="{StaticResource Forward}"
                            Command="{Binding BackCommand}"/>
            <tmpl:TopButton Grid.Column="2"
                            Icon="{StaticResource Copy}"
                            Command="{Binding CopyCommand}"/>
            <tmpl:TopButton Grid.Column="3"
                            Icon="{StaticResource Move}"
                            Command="{Binding MoveCommand}"/>
            <tmpl:TopButton Grid.Column="4"
                            Icon="{StaticResource Delete}"
                            Command="{Binding DeleteCommand}"
                            HotKey="Delete"/>
            <tmpl:TopButton Grid.Column="5"
                            Icon="{StaticResource Rename}"
                            Command="{Binding RenameCommand}"/>
            <tmpl:TopButton Grid.Column="6"
                            Icon="{StaticResource Download}"
                            Command="{Binding ProgressBarCommand}"/>
        </Grid>
        
        <!-- Bottom side -->
        <Grid Grid.Column="0"
              Grid.Row="1"
              Grid.ColumnSpan="2"
              ColumnDefinitions="*,Auto,*"
              ShowGridLines="False">
            
            <!-- Left Panel -->
            <ui:DirectoryPanelView
                Grid.Column="0"
                Content="{Binding LeftPanel}" />

            <!-- Right Panel -->
            <ui:DirectoryPanelView
                Grid.Column="2"
                Content="{Binding RightPanel}" />
            
        </Grid>
        
        <!-- Download Bar (Show / Hide) -->
        <Grid Grid.Column="0"
              Grid.Row="2"
              Grid.ColumnSpan="2"
              Height="80"
              Margin="5">
            <StackPanel Orientation="Horizontal">
                <Border Background="Transparent"
                        BorderThickness="2"
                        BorderBrush="{StaticResource LightGray}"
                        CornerRadius="10"
                        Width="200"
                        Margin="0,0,5,0"
                        Padding="10">
                    <StackPanel>
                        <TextBlock Text="{Binding Size}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5"/>
                        <ProgressBar Minimum="0"
                                     Maximum="100"
                                     Value="{Binding CircleValue}"
                                     ShowProgressText="True"
                                     IsIndeterminate="False"/>
                    </StackPanel>
                </Border>
                <Border Background="Transparent"
                        BorderThickness="2"
                        BorderBrush="{StaticResource LightGray}"
                        CornerRadius="10"
                        Width="200"
                        Margin="0,0,5,0"
                        Padding="0">
                    <tmpl:PickleProgress Width="60"
                                         Height="60"
                                         Value="{Binding CircleValue}"
                                         HorizontalAlignment="Left"
                                         Margin="10,0,0,0"/>
                </Border>
            </StackPanel>
        </Grid>
        
    </Grid>

</Window>
